<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.elvel.system.mapper.BusinessReadingRecordsMapper">

    <resultMap type="BusinessReadingRecords" id="BusinessReadingRecordsResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="bookId"    column="book_id"    />
        <result property="chapterId"    column="chapter_id"    />
        <result property="lastGenerationId"    column="last_generation_id"    />
        <result property="readingMode"    column="reading_mode"    />
        <result property="progress"    column="progress"    />
        <result property="lastReadAt"    column="last_read_at"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectBusinessReadingRecordsVo">
        select id, user_id, book_id, chapter_id, last_generation_id, reading_mode, progress, last_read_at, create_time from business_reading_records
    </sql>

    <select id="selectBusinessReadingRecordsList" parameterType="BusinessReadingRecords" resultMap="BusinessReadingRecordsResult">
        <include refid="selectBusinessReadingRecordsVo"/>
        <where>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="bookId != null "> and book_id = #{bookId}</if>
            <if test="chapterId != null "> and chapter_id = #{chapterId}</if>
            <if test="lastGenerationId != null "> and last_generation_id = #{lastGenerationId}</if>
            <if test="readingMode != null  and readingMode != ''"> and reading_mode = #{readingMode}</if>
            <if test="progress != null "> and progress = #{progress}</if>
            <if test="lastReadAt != null "> and last_read_at = #{lastReadAt}</if>
        </where>
    </select>

    <select id="selectBusinessReadingRecordsById" parameterType="Long" resultMap="BusinessReadingRecordsResult">
        <include refid="selectBusinessReadingRecordsVo"/>
        where id = #{id}
    </select>

    <insert id="insertBusinessReadingRecords" parameterType="BusinessReadingRecords" useGeneratedKeys="true" keyProperty="id">
        insert into business_reading_records
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="bookId != null">book_id,</if>
            <if test="chapterId != null">chapter_id,</if>
            <if test="lastGenerationId != null">last_generation_id,</if>
            <if test="readingMode != null">reading_mode,</if>
            <if test="progress != null">progress,</if>
            <if test="lastReadAt != null">last_read_at,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="bookId != null">#{bookId},</if>
            <if test="chapterId != null">#{chapterId},</if>
            <if test="lastGenerationId != null">#{lastGenerationId},</if>
            <if test="readingMode != null">#{readingMode},</if>
            <if test="progress != null">#{progress},</if>
            <if test="lastReadAt != null">#{lastReadAt},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateBusinessReadingRecords" parameterType="BusinessReadingRecords">
        update business_reading_records
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="bookId != null">book_id = #{bookId},</if>
            <if test="chapterId != null">chapter_id = #{chapterId},</if>
            <if test="lastGenerationId != null">last_generation_id = #{lastGenerationId},</if>
            <if test="readingMode != null">reading_mode = #{readingMode},</if>
            <if test="progress != null">progress = #{progress},</if>
            <if test="lastReadAt != null">last_read_at = #{lastReadAt},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBusinessReadingRecordsById" parameterType="Long">
        delete from business_reading_records where id = #{id}
    </delete>

    <delete id="deleteBusinessReadingRecordsByIds" parameterType="String">
        delete from business_reading_records where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
