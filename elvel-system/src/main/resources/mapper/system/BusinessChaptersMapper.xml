<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.elvel.system.mapper.BusinessChaptersMapper">

    <resultMap type="BusinessChapters" id="BusinessChaptersResult">
        <result property="id"    column="id"    />
        <result property="bookId"    column="book_id"    />
        <result property="chapterNumber"    column="chapter_number"    />
        <result property="title"    column="title"    />
        <result property="contentSummary"    column="content_summary"    />
        <result property="wordCount"    column="word_count"    />
        <result property="generationCount"    column="generation_count"    />
        <result property="isCompleted"    column="is_completed"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectBusinessChaptersVo">
        select id, book_id, chapter_number, title, content_summary, word_count, generation_count, is_completed, create_time, update_time from business_chapters
    </sql>

    <select id="selectBusinessChaptersList" parameterType="BusinessChapters" resultMap="BusinessChaptersResult">
        <include refid="selectBusinessChaptersVo"/>
        <where>
            <if test="bookId != null "> and book_id = #{bookId}</if>
            <if test="chapterNumber != null "> and chapter_number = #{chapterNumber}</if>
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="contentSummary != null  and contentSummary != ''"> and content_summary = #{contentSummary}</if>
            <if test="wordCount != null "> and word_count = #{wordCount}</if>
            <if test="generationCount != null "> and generation_count = #{generationCount}</if>
            <if test="isCompleted != null "> and is_completed = #{isCompleted}</if>
        </where>
    </select>

    <select id="selectBusinessChaptersById" parameterType="Long" resultMap="BusinessChaptersResult">
        <include refid="selectBusinessChaptersVo"/>
        where id = #{id}
    </select>

    <insert id="insertBusinessChapters" parameterType="BusinessChapters" useGeneratedKeys="true" keyProperty="id">
        insert into business_chapters
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="bookId != null">book_id,</if>
            <if test="chapterNumber != null">chapter_number,</if>
            <if test="title != null">title,</if>
            <if test="contentSummary != null">content_summary,</if>
            <if test="wordCount != null">word_count,</if>
            <if test="generationCount != null">generation_count,</if>
            <if test="isCompleted != null">is_completed,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="bookId != null">#{bookId},</if>
            <if test="chapterNumber != null">#{chapterNumber},</if>
            <if test="title != null">#{title},</if>
            <if test="contentSummary != null">#{contentSummary},</if>
            <if test="wordCount != null">#{wordCount},</if>
            <if test="generationCount != null">#{generationCount},</if>
            <if test="isCompleted != null">#{isCompleted},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateBusinessChapters" parameterType="BusinessChapters">
        update business_chapters
        <trim prefix="SET" suffixOverrides=",">
            <if test="bookId != null">book_id = #{bookId},</if>
            <if test="chapterNumber != null">chapter_number = #{chapterNumber},</if>
            <if test="title != null">title = #{title},</if>
            <if test="contentSummary != null">content_summary = #{contentSummary},</if>
            <if test="wordCount != null">word_count = #{wordCount},</if>
            <if test="generationCount != null">generation_count = #{generationCount},</if>
            <if test="isCompleted != null">is_completed = #{isCompleted},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBusinessChaptersById" parameterType="Long">
        delete from business_chapters where id = #{id}
    </delete>

    <delete id="deleteBusinessChaptersByIds" parameterType="String">
        delete from business_chapters where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
