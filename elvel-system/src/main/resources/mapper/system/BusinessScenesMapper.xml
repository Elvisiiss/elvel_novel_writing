<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.elvel.system.mapper.BusinessScenesMapper">

    <resultMap type="BusinessScenes" id="BusinessScenesResult">
        <result property="id"    column="id"    />
        <result property="bookId"    column="book_id"    />
        <result property="name"    column="name"    />
        <result property="description"    column="description"    />
        <result property="type"    column="type"    />
        <result property="details"    column="details"    />
        <result property="firstAppearChapter"    column="first_appear_chapter"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectBusinessScenesVo">
        select id, book_id, name, description, type, details, first_appear_chapter, create_time from business_scenes
    </sql>

    <select id="selectBusinessScenesList" parameterType="BusinessScenes" resultMap="BusinessScenesResult">
        <include refid="selectBusinessScenesVo"/>
        <where>
            <if test="bookId != null "> and book_id = #{bookId}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="type != null  and type != ''"> and type = #{type}</if>
            <if test="details != null  and details != ''"> and details = #{details}</if>
            <if test="firstAppearChapter != null "> and first_appear_chapter = #{firstAppearChapter}</if>
        </where>
    </select>

    <select id="selectBusinessScenesById" parameterType="Long" resultMap="BusinessScenesResult">
        <include refid="selectBusinessScenesVo"/>
        where id = #{id}
    </select>

    <insert id="insertBusinessScenes" parameterType="BusinessScenes" useGeneratedKeys="true" keyProperty="id">
        insert into business_scenes
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="bookId != null">book_id,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="description != null">description,</if>
            <if test="type != null">type,</if>
            <if test="details != null">details,</if>
            <if test="firstAppearChapter != null">first_appear_chapter,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="bookId != null">#{bookId},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="description != null">#{description},</if>
            <if test="type != null">#{type},</if>
            <if test="details != null">#{details},</if>
            <if test="firstAppearChapter != null">#{firstAppearChapter},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateBusinessScenes" parameterType="BusinessScenes">
        update business_scenes
        <trim prefix="SET" suffixOverrides=",">
            <if test="bookId != null">book_id = #{bookId},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="description != null">description = #{description},</if>
            <if test="type != null">type = #{type},</if>
            <if test="details != null">details = #{details},</if>
            <if test="firstAppearChapter != null">first_appear_chapter = #{firstAppearChapter},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBusinessScenesById" parameterType="Long">
        delete from business_scenes where id = #{id}
    </delete>

    <delete id="deleteBusinessScenesByIds" parameterType="String">
        delete from business_scenes where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
