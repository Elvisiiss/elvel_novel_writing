<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.elvel.system.mapper.BusinessBooksMapper">

    <resultMap type="BusinessBooks" id="BusinessBooksResult">
        <result property="id"    column="id"    />
        <result property="title"    column="title"    />
        <result property="coverUrl"    column="cover_url"    />
        <result property="description"    column="description"    />
        <result property="genre"    column="genre"    />
        <result property="tags"    column="tags"    />
        <result property="userId"    column="user_id"    />
        <result property="baseVersionId"    column="base_version_id"    />
        <result property="versionCode"    column="version_code"    />
        <result property="status"    column="status"    />
        <result property="derivativePermission"    column="derivative_permission"    />
        <result property="wordCount"    column="word_count"    />
        <result property="chapterCount"    column="chapter_count"    />
        <result property="readCount"    column="read_count"    />
        <result property="likeCount"    column="like_count"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectBusinessBooksVo">
        select id, title, cover_url, description, genre, tags, user_id, base_version_id, version_code, status, derivative_permission, word_count, chapter_count, read_count, like_count, create_time, update_time from business_books
    </sql>

    <select id="selectBusinessBooksList" parameterType="BusinessBooks" resultMap="BusinessBooksResult">
        <include refid="selectBusinessBooksVo"/>
        <where>
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="coverUrl != null  and coverUrl != ''"> and cover_url = #{coverUrl}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="genre != null  and genre != ''"> and genre = #{genre}</if>
            <if test="tags != null  and tags != ''"> and tags = #{tags}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="baseVersionId != null "> and base_version_id = #{baseVersionId}</if>
            <if test="versionCode != null  and versionCode != ''"> and version_code = #{versionCode}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="derivativePermission != null  and derivativePermission != ''"> and derivative_permission = #{derivativePermission}</if>
            <if test="wordCount != null "> and word_count = #{wordCount}</if>
            <if test="chapterCount != null "> and chapter_count = #{chapterCount}</if>
            <if test="readCount != null "> and read_count = #{readCount}</if>
            <if test="likeCount != null "> and like_count = #{likeCount}</if>
        </where>
    </select>

    <select id="selectBusinessBooksById" parameterType="Long" resultMap="BusinessBooksResult">
        <include refid="selectBusinessBooksVo"/>
        where id = #{id}
    </select>

    <insert id="insertBusinessBooks" parameterType="BusinessBooks" useGeneratedKeys="true" keyProperty="id">
        insert into business_books
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="coverUrl != null">cover_url,</if>
            <if test="description != null">description,</if>
            <if test="genre != null">genre,</if>
            <if test="tags != null">tags,</if>
            <if test="userId != null">user_id,</if>
            <if test="baseVersionId != null">base_version_id,</if>
            <if test="versionCode != null">version_code,</if>
            <if test="status != null">status,</if>
            <if test="derivativePermission != null">derivative_permission,</if>
            <if test="wordCount != null">word_count,</if>
            <if test="chapterCount != null">chapter_count,</if>
            <if test="readCount != null">read_count,</if>
            <if test="likeCount != null">like_count,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="coverUrl != null">#{coverUrl},</if>
            <if test="description != null">#{description},</if>
            <if test="genre != null">#{genre},</if>
            <if test="tags != null">#{tags},</if>
            <if test="userId != null">#{userId},</if>
            <if test="baseVersionId != null">#{baseVersionId},</if>
            <if test="versionCode != null">#{versionCode},</if>
            <if test="status != null">#{status},</if>
            <if test="derivativePermission != null">#{derivativePermission},</if>
            <if test="wordCount != null">#{wordCount},</if>
            <if test="chapterCount != null">#{chapterCount},</if>
            <if test="readCount != null">#{readCount},</if>
            <if test="likeCount != null">#{likeCount},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateBusinessBooks" parameterType="BusinessBooks">
        update business_books
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="coverUrl != null">cover_url = #{coverUrl},</if>
            <if test="description != null">description = #{description},</if>
            <if test="genre != null">genre = #{genre},</if>
            <if test="tags != null">tags = #{tags},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="baseVersionId != null">base_version_id = #{baseVersionId},</if>
            <if test="versionCode != null">version_code = #{versionCode},</if>
            <if test="status != null">status = #{status},</if>
            <if test="derivativePermission != null">derivative_permission = #{derivativePermission},</if>
            <if test="wordCount != null">word_count = #{wordCount},</if>
            <if test="chapterCount != null">chapter_count = #{chapterCount},</if>
            <if test="readCount != null">read_count = #{readCount},</if>
            <if test="likeCount != null">like_count = #{likeCount},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBusinessBooksById" parameterType="Long">
        delete from business_books where id = #{id}
    </delete>

    <delete id="deleteBusinessBooksByIds" parameterType="String">
        delete from business_books where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
